<%= form_for(@user, url: signin_path, method: :post) do |f| %>
  <div class='container'>
    <div class="card">
      <div class="card-content">
        <span class="card-title">Log in</span>
          <div class="field">
            <div class='row'>

              <div class="col s12 m4 l1">
                <i class="small material-icons black-text">email</i>
              </div>

              <div class="col s12 m4 l8">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true %>
              </div>

            </div>
          </div>

          <div class="field">
            <div class='row'>
              <div class='col s12 m4 l1'>
                <i class="small material-icons black-text">lock_outline</i>
              </div>
              <div class='col s12 m4 l8'>
                <%= f.password_field :password, autocomplete: "off" %>
                <%= f.label :password %><br />
              </div>
            </div>

          </div>
      </div>
      <div class="card-action">
        <%= f.submit "Sign in", class: 'waves-effect waves-light btn' %>
        <%= link_to "Don't have account yet ?", signup_path, class: 'waves-effect orange accent-2 waves-light btn' %>
      </div>
    </div>
  </div>
<% end %>
